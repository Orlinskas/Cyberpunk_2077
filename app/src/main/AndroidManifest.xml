<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.orlinskas.cyberpunk">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".ApplicationContext"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@drawable/logo_cyberpunk"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_cyberpunk"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        android:hardwareAccelerated="false">

        <activity
            android:name=".ui.main.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".ui.other.CountryListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.other.CityListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.other.HelpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.other.ContactsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.main.ForecastActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.other.WidgetCreatorView"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.other.WallpaperSetterActivity"
            android:label="Set Wallpaper"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.home.ConfigurationWidgetActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.home.FlashlightActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleInstance"
            android:finishOnTaskLaunch = "true"/>

        <service
            android:name=".updateWidget.TroubleshooterUpdateService"
            android:enabled="true"/>

        <service
            android:name=".updateWidget.SmallWeatherUpdateService"
            android:enabled="true"/>

        <receiver
            android:name=".ui.home.WidgetTroubleshooter"
            android:icon="@drawable/logo_cyberpunk"
            android:label="Troubleshooter"
            android:widgetCategory="home_screen|keyguard"
            android:resizeMode="horizontal|vertical">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_troubleshooter_metadata" />
        </receiver>

        <receiver
            android:name=".ui.home.WidgetSmallWeather"
            android:icon="@drawable/logo_cyberpunk"
            android:label="WeatherSmall"
            android:widgetCategory="home_screen|keyguard"
            android:resizeMode="horizontal|vertical">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_small_weather_metadata" />
        </receiver>

        <receiver android:name=".updateWidget.UpdateReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <uses-library
            android:name="android.test.runner"
            android:required="false" />
        <uses-library
            android:name="android.test.base"
            android:required="false" />
        <uses-library
            android:name="android.test.mock"
            android:required="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>

