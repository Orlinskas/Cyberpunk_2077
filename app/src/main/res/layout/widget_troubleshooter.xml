<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_troubleshooter_rl"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <RelativeLayout
        android:id="@+id/widget_troubleshooter_rl_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/im_background_troubleshooter">

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/widget_troubleshooter_ll_troubleshooter"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/widget_troubleshooter_im_update_btn"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_troubleshooter_iv_troubleshooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            app:srcCompat="@drawable/im_trouble_text_2" />

        <LinearLayout
            android:id="@+id/widget_troubleshooter_ll_troubleshoter_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/widget_troubleshooter_iv_percipitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/im_percipitation_off" />

            <ImageView
                android:id="@+id/widget_troubleshooter_iv_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/im_wind_off" />

            <ImageView
                android:id="@+id/widget_troubleshooter_iv_wet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/im_wet_off" />

            <ImageView
                android:id="@+id/widget_troubleshooter_iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/im_head_off" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/widget_troubleshooter_im_update_btn"
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="5dp"
        app:srcCompat="@drawable/im_update_btn_off" />

    <RelativeLayout
        android:id="@+id/widget_troubleshooter_rl_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-10dp"
        android:layout_toStartOf="@+id/widget_troubleshooter_iv_flashlight">

        <ImageView
            android:id="@+id/widget_troubleshooter_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/widget_troubleshooter_digital_clock"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5dp" />

        <ImageView
            android:id="@+id/widget_troubleshooter_iv_weather_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/widget_troubleshooter_tv_date"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/textView2" />

        <TextClock
            android:id="@+id/widget_troubleshooter_digital_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:shadowColor="@color/colorCyberpunkGreen"
            android:shadowRadius="6"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorCyberpunkWhite"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/widget_troubleshooter_tv_weather_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_troubleshooter_tv_date"
            android:layout_toEndOf="@+id/textView2"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="@color/colorCyberpunkRed"
            android:shadowRadius="4"
            android:textAlignment="center"
            android:textColor="@color/colorCyberpunkRed"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_troubleshooter_tv_date"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/widget_troubleshooter_rl_city_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/widget_troubleshooter_tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="monospace"
            android:maxLength="15"
            android:shadowColor="@color/colorCyberpunkGreen"
            android:shadowRadius="6"
            android:text="Loading..."
            android:textColor="@color/colorCyberpunkWhite"
            android:textSize="14sp" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/widget_troubleshooter_pb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_troubleshooter_rl_background"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="30dp"
        android:indeterminate="true"
        android:theme="@style/AppTheme.WhiteAccent" />

    <ImageView
        android:id="@+id/widget_troubleshooter_iv_flashlight"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_above="@+id/widget_troubleshooter_ll_troubleshooter"
        android:layout_marginBottom="-5dp"
        android:layout_toStartOf="@+id/widget_troubleshooter_rl_console"
        app:srcCompat="@drawable/im_btn_flashlight_off" />

    <ImageView
        android:id="@+id/widget_troubleshooter_iv_wifi"
        android:layout_width="44dp"
        android:layout_height="44dp"

        android:layout_above="@+id/widget_troubleshooter_iv_flashlight"
        android:layout_toStartOf="@+id/widget_troubleshooter_rl_console"
        app:srcCompat="@drawable/im_btn_wifi_off" />

    <RelativeLayout
        android:id="@+id/widget_troubleshooter_rl_console"
        android:layout_width="135dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/widget_troubleshooter_im_update_btn"
        android:layout_below="@+id/widget_troubleshooter_rl_city_name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/console_background"
        tools:layout_marginBottom="-3dp">

        <TextView
            android:id="@+id/widget_troubleshooter_tv_timezone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:background="@color/colorConsoleBackgroundRow"
            android:fontFamily="sans-serif-thin"
            android:maxLines="1"
            android:text="Console."
            android:textColor="@color/colorTextBlack"
            android:textSize="10sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/widget_troubleshooter_tv_timezone_utc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif-thin"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorTextBlack"
            android:textSize="10sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/widget_troubleshooter_tv_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_troubleshooter_tv_timezone"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif-thin"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/colorCyberpunkRed"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_troubleshooter_tv_RAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_troubleshooter_tv_warning"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif-thin"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/colorCyberpunkRed"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_troubleshooter_tv_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_troubleshooter_tv_RAM"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif-thin"
            android:maxLines="1"
            android:textColor="@color/colorCyberpunkRed"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_troubleshooter_tv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_troubleshooter_tv_memory"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif-thin"
            android:maxLines="1"
            android:textColor="@color/colorCyberpunkRed"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_troubleshooter_tv_precipitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/widget_troubleshooter_tv_wifi"
            android:layout_alignParentEnd="false"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="sans-serif-thin"
            android:maxLines="1"
            android:textColor="@color/colorCyberpunkRed"
            android:textSize="10sp"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>