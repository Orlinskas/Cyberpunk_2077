<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_list_view_row_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/widget_list_view_row_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/gost"
        android:shadowColor="@color/colorBlack"
        android:shadowRadius="2"
        android:text="@string/id"
        android:textColor="@color/colorCyberpunkRed"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/widget_list_view_row_tv_space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/widget_list_view_row_tv_id"
        android:fontFamily="@font/gost"
        android:shadowColor="@color/colorBlack"
        android:shadowRadius="2"
        android:text="@string/long_tire"
        android:textColor="@color/colorCyberpunkRed"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/widget_list_view_row_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/widget_list_view_row_tv_space"
        android:fontFamily="@font/gost"
        android:maxLength="15"
        android:shadowColor="@color/colorBlack"
        android:shadowRadius="2"
        android:text="@string/city_2"
        android:textColor="@color/colorCyberpunkRed"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/widget_list_view_row_tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/widget_list_view_row_tv_name"
        android:fontFamily="@font/gost"
        android:shadowColor="@color/colorBlack"
        android:shadowRadius="2"
        android:text="@string/code"
        android:textColor="@color/colorCyberpunkRed"
        android:textSize="20sp" />
</RelativeLayout>