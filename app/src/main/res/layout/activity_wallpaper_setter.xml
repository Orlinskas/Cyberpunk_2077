<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_wallpaper_setter_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_background_3">

    <ProgressBar
        android:id="@+id/activity_wallpaper_setter_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/activity_wallpaper_setter_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView"
        android:layout_below="@id/activity_wallpaper_setter_pb"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/grey_background">

        <GridView
            android:id="@+id/actvity_wallpaper_setter_gv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/cyberpunk_eng"
        android:text="@string/orlinskas_development"
        android:textColor="@color/colorCyberpunkRed"
        android:textSize="12sp" />

</RelativeLayout>