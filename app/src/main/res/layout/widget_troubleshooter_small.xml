<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_troubleshooter_small_rl"
    android:layout_width="match_parent"
    android:layout_height="88dp">

    <RelativeLayout
        android:id="@+id/widget_troubleshooter_small_rl_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/im_background_small_widget">
    </RelativeLayout>

    <ImageView
        android:id="@+id/widget_troubleshooter_small_im_update_btn"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_below="@+id/widget_troubleshooter_small_iv_wifi"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="2dp"
        android:contentDescription="@string/image"
        app:srcCompat="@drawable/im_update_btn_off" />

    <ImageView
        android:id="@+id/widget_troubleshooter_small_iv_flashlight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/widget_troubleshooter_small_rl_city_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:contentDescription="@string/image"
        app:srcCompat="@drawable/im_btn_flashlight_off" />

    <ImageView
        android:id="@+id/widget_troubleshooter_small_iv_wifi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/widget_troubleshooter_small_rl_city_name"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/widget_troubleshooter_small_iv_flashlight"
        android:contentDescription="@string/image"
        app:srcCompat="@drawable/im_btn_wifi_off" />

    <LinearLayout
        android:id="@+id/widget_troubleshooter_small_ll_troubleshooter"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/widget_troubleshooter_small_rl_clock"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/widget_troubleshooter_small_im_update_btn"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/widget_troubleshooter_small_iv_troubleshooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            android:contentDescription="@string/image"
            app:srcCompat="@drawable/im_trouble_text_2" />

        <LinearLayout
            android:id="@+id/widget_troubleshooter_small_ll_troubleshoter_icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/widget_troubleshooter_small_iv_percipitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/image"
                app:srcCompat="@drawable/im_percipitation_off" />

            <ImageView
                android:id="@+id/widget_troubleshooter_small_iv_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/image"
                app:srcCompat="@drawable/im_wind_off" />

            <ImageView
                android:id="@+id/widget_troubleshooter_small_iv_wet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/image"
                app:srcCompat="@drawable/im_wet_off" />

            <ImageView
                android:id="@+id/widget_troubleshooter_small_iv_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/image"
                app:srcCompat="@drawable/im_head_off" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/widget_troubleshooter_small_pb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_troubleshooter_small_rl_background"
        android:layout_alignParentEnd="false"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-7dp"
        android:layout_marginEnd="30dp"
        android:indeterminate="true"
        android:theme="@style/AppTheme.WhiteAccent" />

    <RelativeLayout
        android:id="@+id/widget_troubleshooter_small_rl_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:layout_toStartOf="@+id/widget_troubleshooter_small_iv_wifi">

        <ImageView
            android:id="@+id/widget_troubleshooter_small_iv_weather_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@id/widget_troubleshooter_small_digital_clock"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/textView2_small"
            android:contentDescription="@string/image" />

        <TextClock
            android:id="@+id/widget_troubleshooter_small_digital_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-thin"
            android:shadowColor="@color/colorCyberpunkGreen"
            android:shadowRadius="6"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorCyberpunkYellow"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/widget_troubleshooter_small_tv_weather_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_troubleshooter_small_digital_clock"
            android:layout_toEndOf="@+id/textView2_small"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="@color/colorCyberpunkRed"
            android:shadowRadius="4"
            android:textAlignment="center"
            android:textColor="@color/colorCyberpunkRed"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textView2_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_troubleshooter_small_digital_clock"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/widget_troubleshooter_small_rl_city_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/widget_troubleshooter_small_tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="monospace"
            android:maxLength="15"
            android:shadowColor="@color/colorCyberpunkGreen"
            android:shadowRadius="6"
            android:text="@string/loading_3"
            android:textColor="@color/colorCyberpunkYellow"
            android:textSize="12sp" />
    </RelativeLayout>


</RelativeLayout>